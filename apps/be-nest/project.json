{
  "root": "apps/be-nest",
  "sourceRoot": "apps/be-nest/src",
  "projectType": "application",
  "prefix": "be-nest",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/be-nest",
        "main": "apps/be-nest/src/main.ts",
        "tsConfig": "apps/be-nest/tsconfig.app.json",
        "assets": [
          "apps/be-nest/src/assets",
          {
            "glob": "**/*",
            "input": "libs/agx-assets/src/lib/i18n/api",
            "output": "assets/i18n"
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/be-nest/src/environments/environment.ts",
              "with": "apps/be-nest/src/environments/environment.prod.ts"
            }
          ]
        },
        "ci": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/be-nest/src/environments/environment.ts",
              "with": "apps/be-nest/src/environments/environment.ci.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "be-nest:build",
        "inspect": true,
        "port": 9229
      },
      "configurations": {
        "production": {
          "buildTarget": "be-nest:build:production"
        },
        "ci": {
          "buildTarget": "be-nest:build:ci"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/be-nest/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/be-nest"],
      "options": {
        "jestConfig": "apps/be-nest/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["app-server:be-nest"],
  "implicitDependencies": ["agx-assets"]
}
